[user]
    name = akijoey
    email = akijoey@akijoey.com
    signingKey = 95FD308D642B6D7C4D3B57FEC742484AA3F9A8B4

[init]
    defaultBranch = main

[core]
    editor = emacs
    autocrlf = input
    safecrlf = true
    filemode = false

[credential]
    helper = cache

[status]
    showUntrackedFiles = all

[commit]
    gpgSign = true

[merge]
    ff = true

[pull]
    ff = true
    rebase = false

[alias]
    ci = commit
    co = checkout
    lg = log --graph --pretty='%C(auto)%h -%d %s %Cgreen(%cr) %C(cyan)<%an>'
